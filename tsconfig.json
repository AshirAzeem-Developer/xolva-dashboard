{
  "compilerOptions": {
    // --- Environment Settings ---
    // The target version of JavaScript to output
    "target": "es2020", 
    // The module system to use (esnext is good for Vite)
    "module": "esnext", 
    // This setting tells TypeScript to work with the DOM and modern iterables
    "lib": ["es2020", "dom", "dom.iterable"],
    // How to resolve modules (important for Node.js resolution)
    "moduleResolution": "bundler",
    // Allows default imports from modules with no default export
    "allowSyntheticDefaultImports": true, 
    // Allows you to mix .js and .ts files
    "allowJs": true,
    // Tells TypeScript how to handle JSX syntax
    "jsx": "react-jsx",
    // Helps with hot module reloading in development
    "isolatedModules": true,
    // Prevents TypeScript from emitting output files (Vite does this)
    "noEmit": true,

    // --- Strictness & Typechecking ---
    // Enables a variety of strictness flags for better type checking
    "strict": true,
    // Ensures consistent casing in file imports
    "forceConsistentCasingInFileNames": true,
    // Prevents "fallthrough" cases in switch statements
    "noFallthroughCasesInSwitch": true,
    // Skips type checking of all declaration files (*.d.ts). Speeds up compilation.
    "skipLibCheck": true,
    "verbatimModuleSyntax": false,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },
  // --- File and Directory Configuration ---
  // Specifies which files to include in the compilation
  "include": ["src"],
  // Specifies files or directories to exclude from compilation
  "exclude": ["node_modules"]
}